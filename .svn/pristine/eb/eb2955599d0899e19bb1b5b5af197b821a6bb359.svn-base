<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_custom_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.risfond.rnss.home.customer.activity.CustomDetailActivity">

    <include layout="@layout/include_title"/>

    <include layout="@layout/customer_header"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TabLayout
            android:id="@+id/tl_custom_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_white"
            app:tabIndicatorColor="@color/color_title_in"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/color_title_in"
            app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
            app:tabTextColor="@color/color_home_gray_text"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/tl_custom_top"
            android:background="@color/color_home_stoke"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.view.ViewPager
            android:id="@+id/vp_custom_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white_real"
            android:paddingTop="5dp"/>

        <ImageView
            android:id="@+id/iv_huifang"
            android:layout_width="143dp"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/hreturnbutton"/>

    </RelativeLayout>

</LinearLayout>
