<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white_real"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/include_publishing_dynamics_title"/>

    <EditText
        android:id="@+id/et_message"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@null"
        android:gravity="top"
        android:hint="请输入需要发布的内容"
        android:lineSpacingMultiplier="1.2"
        android:maxLength="200"
        android:paddingBottom="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:textColor="@color/color_home_black_text"
        android:textColorHint="@color/color_home_gray_text"
        android:textSize="15sp"/>

    <include layout="@layout/include_line_gray_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="例如：某公司，某职位，工作地点，年薪，悬赏点数等"
        android:textColor="@color/color_home_gray_text"
        android:textSize="13sp"/>

</LinearLayout>