<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <View style="@style/item_line"/>

    <RelativeLayout
        android:id="@+id/rl_leave_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假分类"
            android:textSize="15sp"
            android:textColor="@color/color_home_black_text"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_leave_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_attend_dimgray"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/iconmoregray"
            android:drawablePadding="9dp"
            android:text="请选择（必填）" />

    </RelativeLayout>

    <View style="@style/item_line"/>

    <View style="@style/item_line"
        android:layout_marginTop="9dp"/>

    <RelativeLayout
        android:id="@+id/rl_leave_time"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假时间"
            android:textSize="15sp"
            android:textColor="@color/color_home_black_text"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_leave_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_attend_dimgray"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/iconmoregray"
            android:drawablePadding="9dp"
            android:text="请选择（必填）" />

    </RelativeLayout>

    <View style="@style/item_line"/>

    <RelativeLayout
        android:id="@+id/rl_leave_long"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@color/color_white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假时长"
            android:textSize="15sp"
            android:textColor="@color/color_home_black_text"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_leave_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_attend_dimgray"
            android:textSize="14sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/iconmoregray"
            android:drawablePadding="9dp"
            android:text="请选择（必填）" />

    </RelativeLayout>

    <View style="@style/item_line"/>

    <View style="@style/item_line"
        android:layout_marginTop="9dp"/>

    <RelativeLayout
        android:id="@+id/rl_leave_reason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:background="@color/color_white"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">


        <RelativeLayout
            android:id="@+id/we_media_publish_content_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_leave_reason"
            android:background="@color/color_white"
            android:minHeight="160dp">

            <EditText
                android:id="@+id/et_leave_reason"
                android:layout_marginLeft="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="请输入请假事由（必填50字以内）"
                android:textColorHint="@color/text_dimgray"
                android:textSize="15sp"
                android:scrollbars="vertical"
                android:background="@null"
                android:textColor="@color/color_home_black_text"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_leave_reason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请假事由"
            android:textSize="15sp"
            android:textColor="@color/color_home_black_text"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <View style="@style/item_line"/>

    <View style="@style/item_line"
        android:layout_marginTop="9dp"/>


</LinearLayout>