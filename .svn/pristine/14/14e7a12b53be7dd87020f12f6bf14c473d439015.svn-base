<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <!-- 人选离职-->
    <com.risfond.rnss.widget.CustomerRadioGroup
        android:id="@+id/rg_process_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white_real"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingLeft="14dp"
        android:paddingRight="14dp"
        android:visibility="gone"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_p10_0"
                style="@style/rb_education"
                android:checked="true"
                android:text="添加新评语"/>

            <RadioButton
                android:id="@+id/rb_p10_1"
                style="@style/rb_education"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="推给顾问"/>

            <RadioButton
                android:id="@+id/rb_p10_2"
                style="@style/rb_education"
                android:text="推给客户"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <RadioButton
                android:id="@+id/rb_p10_3"
                style="@style/rb_education"
                android:text="否决人选"/>

            <RadioButton
                style="@style/rb_education"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:visibility="invisible"/>

            <RadioButton
                style="@style/rb_education"
                android:visibility="invisible"/>

        </LinearLayout>

    </com.risfond.rnss.widget.CustomerRadioGroup>


</LinearLayout>
