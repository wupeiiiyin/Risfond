<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_home_back"
    android:orientation="vertical">

    <com.risfond.rnss.widget.ExpandableTextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.5dp"
        android:layout_marginTop="5dp"
        android:background="@color/color_white_real"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:text="职业经历：xxxxxxx"
        android:textColor="@color/color_mine_black_text"
        android:textSize="14sp"
        app:etv_MaxLinesOnShrink="4"
        android:lineSpacingMultiplier="1.2"
        app:etv_ToExpandHintColor="#0e97ff"
        app:etv_ToShrinkHintShow="false"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.5dp"
        android:background="@mipmap/line_dashed"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8.5dp"
        android:background="@color/color_white_real"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已通过"
            android:textColor="@color/color_resume_green"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:text="2017.03.01 10:02"
            android:textColor="@color/color_home_gray_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="14dp"
            android:layout_toLeftOf="@+id/tv_time"
            android:text="爱丽丝"
            android:textColor="@color/color_home_gray_text"
            android:textSize="12sp"/>

    </RelativeLayout>

</LinearLayout>