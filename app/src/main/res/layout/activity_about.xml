<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_mine_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/include_title"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@mipmap/logo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="锐仕方达 "
            android:textColor="@color/color_mine_gray_text"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/tv_version_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1.0.0"
            android:textColor="@color/color_mine_gray_text"
            android:textSize="18sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_clear_cash"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_mine_text_click"
        android:drawableRight="@mipmap/more"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="清除缓存"
        android:textColor="@color/color_mine_black_text"
        android:textSize="16sp"/>


    <TextView
        android:id="@+id/tv_check_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_mine_text_click"
        android:drawableRight="@mipmap/more"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="检查更新"
        android:textColor="@color/color_mine_black_text"
        android:textSize="16sp"/>


</LinearLayout>
