<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="117dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/bg_real_time_arrival">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="任强"
            android:textColor="@color/color_black"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginTop="10dp"
            android:text="苏州"
            android:textColor="@color/color_home_gray_text"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/position"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="苏州某知名互联网公司"
            android:textColor="@color/color_home_gray_text"
            android:textSize="12sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/company_name"
            android:layout_marginTop="15dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="888,888"
                    android:maxLines="1"
                    android:textColor="@color/color_operate_platform_txt"
                    android:textSize="13sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="元"
                    android:textColor="@color/color_home_gray_text"
                    android:textSize="8sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="1dp"
                android:layout_height="10dp"
                android:background="@color/color_home_back"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:text="06-13"
                android:maxLines="1"
                android:textColor="@color/color_home_black_text"
                android:textSize="13sp"/>
        </LinearLayout>

        <com.risfond.rnss.widget.CircleImageView
            android:id="@+id/head_portrait"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:src="@mipmap/person_default"/>

    </RelativeLayout>

</RelativeLayout>