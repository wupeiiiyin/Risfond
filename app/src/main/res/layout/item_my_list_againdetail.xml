<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/img_dian"
        android:layout_marginLeft="28px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_hand"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:background="@color/color_home_stoke" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/record_circle" />

            <TextView
                android:id="@+id/tv_item_foot"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/color_home_stoke" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="44px"
        android:layout_marginTop="46px"
        android:layout_toRightOf="@+id/img_dian"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017.12.11" />

        <TextView
            android:id="@+id/tv_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="44px"
            android:layout_toRightOf="@+id/tv_item_time"
            android:maxLines="2"
            android:text="内容是这个" />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="44px"
        android:layout_toRightOf="@+id/img_dian"
        android:background="#EBEBEB"></View>
</RelativeLayout>

