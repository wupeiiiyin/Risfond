<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    tools:context="com.risfond.rnss.home.commonFuctions.reminding.activity.AddTheTransactionActivity">


    <include layout="@layout/include_title"/>

    <EditText
        android:layout_below="@+id/id_title_rootview"
        android:id="@+id/edit_addthetransaction_content"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:gravity="clip_horizontal"
        android:paddingTop="5dp"
        android:paddingLeft="5dp"
        android:hint="请输入事务内容(必填)"
        android:maxLength="2000"/>

    <LinearLayout
        android:layout_below="@+id/edit_addthetransaction_content"
        android:id="@+id/ll_addthetransaction_time"
        android:background="#FFFFFF"
        android:layout_marginTop="25dp"
        android:padding="15dp"
        android:textSize="@dimen/sp_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:paddingLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="2017-12-20  15:30  "
            android:drawableRight="@mipmap/iconmoregray"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_below="@id/ll_addthetransaction_time"
        android:id="@+id/ll_addthetransaction_reminding"
        android:background="#FFFFFF"
        android:layout_marginTop="2dp"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提醒"
            android:paddingLeft="5dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="提前五分钟  "
            android:drawableRight="@mipmap/iconmoregray"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_addthetransaction_commit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:layout_margin="15dp"
        android:padding="10dp"
        android:gravity="center_horizontal"
        android:background="#009afa"
        android:textColor="#F3FEFD"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/xxx"
        android:text="查看"
        android:layout_above="@+id/tv_addthetransaction_commit"
        android:layout_alignLeft="@+id/tv_addthetransaction_commit"
        android:layout_alignStart="@+id/tv_addthetransaction_commit"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"/>
</RelativeLayout>
