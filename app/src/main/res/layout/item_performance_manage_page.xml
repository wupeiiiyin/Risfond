<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingLeft="12dp"
    android:paddingRight="13dp"
    android:paddingTop="13dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="250dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_invoice_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:text="朱蕾 · 杭州公司"
                    android:maxWidth="240dp"
                    android:textColor="@color/color_home_black_text"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/iv_invoice_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="9dp"
                    android:layout_marginRight="14dp"
                    android:src="@mipmap/l1" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_invoice_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@+id/tv_invoice_yuan"
                android:text="15,000"
                android:textColor="@color/color_operate_platform_txt"
                android:textSize="13sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/rl_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_invoice"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_invoice_stype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="推荐状态："
                        android:textColor="@color/color_home_gray_text"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_invoice_stype_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_invoice_stype"
                        android:text="推给客户"
                        android:textColor="@color/color_customer_black"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_invoice"
                    android:layout_marginTop="9dp">

                    <TextView
                        android:id="@+id/tv_invoice_salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="推荐人选："
                        android:textColor="@color/color_home_gray_text"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_invoice_salary_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_invoice_salary"
                        android:text="埃文斯"
                        android:maxWidth="120dp"
                        android:textColor="@color/color_customer_black"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_toRightOf="@+id/rl_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rl_invoice_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_invoice_stype_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="申请时间："
                        android:textColor="@color/color_home_gray_text"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_invoice_stype_person_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_invoice_stype_person"
                        android:text="2017.05.02"
                        android:textColor="@color/color_customer_black"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/rl_invoice_person"
                    android:layout_marginTop="9dp">

                    <TextView
                        android:id="@+id/tv_salary_person"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="寻访职位："
                        android:textColor="@color/color_home_gray_text"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_salary_person_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_salary_person"
                        android:text="高级UI设计师/平面设计师"
                        android:textColor="@color/color_customer_black"
                        android:textSize="12sp" />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>