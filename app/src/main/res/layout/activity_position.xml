<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_customer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.risfond.rnss.home.customer.activity.CustomerSearchActivity">

    <include layout="@layout/include_title"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.design.widget.TabLayout
                android:id="@+id/id_tab_customer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_white"
                app:tabIndicatorColor="@color/color_title_in"
                app:tabMode="fixed"
                app:tabSelectedTextColor="@color/color_title_in"
                app:tabTextAppearance="@style/MyTabLayoutTextAppearance"
                app:tabTextColor="@color/color_home_gray_text"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/tab_news"
                android:background="@color/color_home_stoke"/>

        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/id_viewpager_customer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white_real"/>

    </LinearLayout>

</LinearLayout>
