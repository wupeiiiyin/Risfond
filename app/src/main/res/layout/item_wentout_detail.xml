<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_wentout_list"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:background="@drawable/bg_attendance_text_click"
        android:clickable="true"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_wentout_goouttype"
                style="@style/my_text_blue_13_0E97FF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="拜访客户" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_wentout_weekformat"
                style="@style/my_text_left_12_646464"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="星期五" />

            <TextView
                android:id="@+id/tv_wentout_dateformat"
                style="@style/my_text_left_12_646464"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="08月19日" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_wentout_startmonth"
                style="@style/my_text_left_12_646464"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08-09" />

            <TextView
                android:id="@+id/tv_wentout_starttime"
                style="@style/my_text_left_12_646464"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="10:00" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_wentout_endmonth"
                style="@style/my_text_left_12_646464"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08-10" />

            <TextView
                android:id="@+id/tv_wentout_endtime"
                style="@style/my_text_left_12_646464"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:text="10:00" />

        </LinearLayout>

    </LinearLayout>

    <View
        style="@style/item_line"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp" />

    <LinearLayout
        android:id="@+id/ll_wentout_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="9dp"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_wentout_clientname"
            style="@style/my_text_13_646464_wentout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="京东世纪商贸有限公司" />

        <TextView
            android:id="@+id/tv_wentout_address"
            style="@style/my_text_13_646464_wentout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="北京市朝阳区远洋国际E座" />

        <TextView
            android:id="@+id/tv_wentout_members"
            style="@style/my_text_13_646464_wentout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="埃文斯 克里斯 安迪" />

        <TextView
            android:id="@+id/tv_wentout_contact"
            style="@style/my_text_13_646464_wentout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="埃文斯" />

        <TextView
            android:id="@+id/tv_wentout_contactnumber"
            style="@style/my_text_13_646464_wentout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="18810352611" />

        <TextView
            android:id="@+id/tv_wentout_reason"
            style="@style/my_text_13_646464_wentout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:text="拜访公司，了解公司需求，以及工作性质，工作职务，顺带和候选人双方见面。" />

        <View
            style="@style/item_line"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="9dp" />

    </LinearLayout>


</LinearLayout>