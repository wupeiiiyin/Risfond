<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:a_zhon="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:background="@drawable/bg_mine_text_click"
              android:orientation="horizontal"
              android:paddingBottom="15dp"
              android:paddingLeft="14dp"
              android:paddingRight="14dp"
              android:paddingTop="15dp">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:src="@mipmap/course_default"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="180dp"
                tools:text="新手营系列课程"
                android:textColor="@color/color_home_black_text"
                android:textSize="15sp"/>

            <ImageView
                android:id="@+id/iv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                tools:src="@mipmap/dlab1"/>
        </LinearLayout>


        <com.azhong.ratingbar.RatingBar
            android:id="@+id/rating_bar_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:paddingLeft="-5dp"
            a_zhon:clickable="false"
            a_zhon:image_height="22dp"
            a_zhon:image_width="22dp"
            a_zhon:star="0"
            a_zhon:star_count="5"
            a_zhon:star_img="@mipmap/diconstar"
            a_zhon:unstar_img="@mipmap/diconstar1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp">

            <TextView
                android:id="@+id/tv_teacher"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/diconteacher"
                android:drawablePadding="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxWidth="100dp"
                tools:text="吕阳讲，阳讲师，阳讲师"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_browse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@mipmap/diconbrowse"
                android:drawablePadding="5dp"
                tools:text="2532次"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@mipmap/dicontime"
                android:drawablePadding="5dp"
                tools:text="2016.02.12"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>


</LinearLayout>