<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/iv_front_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/diconleft"
            android:paddingRight="8dp"
            android:paddingLeft="50dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>

        <TextView
            android:id="@+id/tv_curremt_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@color/text_blue"
            android:text="2017年08月"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/tv_next_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/diconright"
            android:paddingLeft="8dp"
            android:paddingRight="50dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="17dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="外出类别"
            android:textColor="@color/text_dimgray"
            android:textSize="11sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="日期"
            android:textColor="@color/text_dimgray"
            android:textSize="11sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="外出时间"
            android:textColor="@color/text_dimgray"
            android:textSize="11sp"
            android:gravity="center_horizontal"/>

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="返回时间"
            android:textColor="@color/text_dimgray"
            android:textSize="11sp"
            android:gravity="center_horizontal"/>

    </LinearLayout>


    <View style="@style/item_line"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"/>

</LinearLayout>