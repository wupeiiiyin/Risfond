<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_chat_person_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/person_default"/>


    <LinearLayout
        android:id="@+id/ll_voice_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_voice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/chat_receive_bg"
            android:gravity="left"
            android:padding="10dp">

            <View
                android:id="@+id/v_chat_voice"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="10dp"
                android:background="@mipmap/voice_receive_anim3"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_chat_voice_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:text="3&apos;&apos;"
            android:textColor="#818181"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_chat_voice_unread"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:src="@mipmap/voice_unread"/>
    </LinearLayout>

</LinearLayout>