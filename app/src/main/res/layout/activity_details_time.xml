<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_details_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.risfond.rnss.home.commonFuctions.reminding.activity.DetailsTimeActivity"
    android:orientation="vertical">
    <include layout="@layout/include_title"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_detailstime_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:textSize="18sp"
            android:text=""/>
        <TextView
            android:id="@+id/tv_detailstime_timedate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:text=""/>
        <View
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#eee"></View>
    </LinearLayout>
    <LinearLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:id="@+id/ll_detailstime_onclick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提醒"
                />

            <TextView
                android:id="@+id/tx"
                android:layout_width="match_parent"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="应用内提醒  >"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日程开始时"
                android:layout_marginRight="85dp"
                android:layout_marginEnd="85dp"
                android:id="@+id/tv_detailstime_tqmin"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/tx"
                android:layout_alignEnd="@+id/tx" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
