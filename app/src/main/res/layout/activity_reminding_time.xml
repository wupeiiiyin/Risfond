<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eee"
    tools:context="com.risfond.rnss.home.commonFuctions.reminding.activity.RemindingTimeActivity">


    <include layout="@layout/include_title"/>
    <View
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_time_tq0"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time_tq0"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="不提醒"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:layout_weight="1"
            />
        <ImageView
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:id="@+id/img_time_tq0"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/rs_select"/>
    </LinearLayout>
    <View
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll_time_tq5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time_tq5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="提前5分钟"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:padding="10dp"
            />
        <ImageView
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:id="@+id/img_time_tq5"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/rs_select"/>
    </LinearLayout>
    <View
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll_time_tq15"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time_tq15"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="提前15分钟"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:padding="10dp"
            />
        <ImageView
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:id="@+id/img_time_tq15"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/rs_select"/>
    </LinearLayout>
    <View
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll_time_tq30"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time_tq30"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="提前30分钟"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:padding="10dp"
            />
        <ImageView
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:id="@+id/img_time_tq30"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/rs_select"/>
    </LinearLayout>
    <View
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll_time_tq60"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time_tq60"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="提前1小时"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:padding="10dp"
            />
        <ImageView
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:id="@+id/img_time_tq60"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/rs_select"/>
    </LinearLayout>
    <View
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/ll_time_tq240"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tv_time_tq240"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="提前1天"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:padding="10dp"
            />
        <ImageView
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginRight="15dp"
            android:id="@+id/img_time_tq240"
            android:layout_weight="1"
            android:layout_width="40dp"
            android:layout_height="35dp"
            android:src="@drawable/rs_select"/>
    </LinearLayout>
    <View
        android:background="#ddd"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
</LinearLayout>
