<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="14dp"
    android:paddingTop="14dp"
    android:paddingBottom="20dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_invoice_remake_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="备注： "
            android:textColor="@color/color_home_gray_text"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_salary_invoice_remake_name_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_invoice_remake_name"
            android:text="服务费，北京王振廷尾款"
            android:textColor="@color/color_customer_black"
            android:textSize="12sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_invoice_spe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_invoice_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="联系电话： "
                android:textColor="@color/color_home_gray_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_salary_invoice_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_invoice_phone"
                android:text="010-85030000"
                android:textColor="@color/color_customer_black"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_invoice_address_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="公司地址： "
                android:textColor="@color/color_home_gray_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_salary_invoice_addresss_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_invoice_address_name"
                android:text="深圳市南山区高新区北区松坪山齐民道3号宇阳大厦4楼南"
                android:textColor="@color/color_customer_black"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_invoice_open_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="开户名称： "
                android:textColor="@color/color_home_gray_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_salary_invoice_open_account_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_invoice_open_account"
                android:text="京东世纪商贸有限公司"
                android:textColor="@color/color_customer_black"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_open_bank_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="开户行： "
                android:textColor="@color/color_home_gray_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_salary_invoice_open_bank_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_open_bank_name"
                android:text="招行科发支行"
                android:textColor="@color/color_customer_black"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_bank_num_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="银行账户： "
                android:textColor="@color/color_home_gray_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_salary_bank_num_name_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/tv_bank_num_name"
                android:text="755918800610808"
                android:textColor="@color/color_customer_black"
                android:textSize="12sp" />
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>