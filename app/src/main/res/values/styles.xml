<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_blue</item>
        <item name="colorPrimaryDark">@color/color_blue</item>
        <item name="colorAccent">@color/color_mine_gray_text</item>
    </style>

    <style name="welcomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/welcome_bg</item>
        <item name="colorPrimary">@color/color_blue</item>
        <!--状态栏颜色-->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorAccent">@color/color_blue</item>
    </style>

    <style name="loginTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/colo_bg_login</item>
        <item name="colorAccent">@color/color_mine_gray_text</item>
    </style>

    <style name="mainTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_blue</item>
        <item name="colorPrimaryDark">@color/color_blue</item>
        <item name="colorAccent">@color/color_mine_gray_text</item>
    </style>

    <style name="whiteTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/transparent</item>
        <item name="colorPrimaryDark">@color/color_white</item>
        <item name="colorAccent">@color/color_mine_gray_text</item>
    </style>

    <style name="bottom_rb_menu">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@drawable/bg_rb_menu</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="dialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/color_text_tip</item>    <!-- Used for the buttons -->
        <item name="android:textColorPrimary">@color/color_mine_black_text
        </item>   <!-- Used for the title and text -->
        <item name="android:background">@android:color/transparent
        </item>  <!-- Used for the background -->
        <item name="android:windowBackground">@color/color_white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="downloadingProgressBar" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:maxHeight">50dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:indeterminateOnly">false</item>
        <item name="android:indeterminateDrawable">
            @android:drawable/progress_indeterminate_horizontal
        </item>
        <item name="android:progressDrawable">@drawable/bg_downloading_progressbar</item>
    </style>

    <style name="Theme_AudioDiao">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="ImageTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
        <item name="android:windowFullscreen">false</item>
    </style>

    <!--自定义switch的按钮和轨迹颜色theme-->
    <style name="mySwitch" parent="Theme.AppCompat.Light">
        <!-- switch 打开时的按钮的颜色 轨迹颜色默认为30%（看效果就明白30%是怎么回事了）这个颜色 -->
        <item name="colorControlActivated">@color/color_send_bg</item>
        <!--  switch关闭时的按钮的颜色 -->
        <item name="colorSwitchThumbNormal">@color/color_mine_gray_text</item>
        <!-- switch关闭时的轨迹的颜色 30%这个颜色 -->
        <item name="android:colorForeground">@color/color_mine_gray_text</item>

    </style>

    <style name="MyTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="rb_call">
        <item name="android:textSize">12sp</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_call_rbtn</item>
        <item name="android:textColor">@drawable/bg_rbtn_call_text_color</item>
        <item name="android:padding">4dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="callDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="colorPrimary">@color/color_blue</item>
        <item name="colorPrimaryDark">@color/color_blue</item>
        <item name="colorAccent">@color/color_mine_gray_text</item>
        <item name="android:windowAnimationStyle">@style/callShowStyle</item>
    </style>

    <style name="callShowStyle" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="scanTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/scan_top_title</item>
        <item name="colorPrimaryDark">@color/scan_top_title</item>
        <item name="colorAccent">@color/color_mine_gray_text</item>
    </style>


    <style name="Theme.Light.NoTitle.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="Theme.Light.NoTitle.NoShadow.Dialog" parent="Theme.Light.NoTitle.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Animation.Bottom.Rising" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="rb_search_title">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@drawable/bg_rb_search_txt</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">4dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableRight">@drawable/bg_rb_search_pic</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="rb_search_title_all">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/bg_rb_searchall_txt</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableRight">@drawable/bg_rb_search_pic_all</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="tv_search_quick">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#323232</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">9dp</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableRight">@drawable/bg_rb_search_pic</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="rb_education">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@drawable/bg_rb_education_txt</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/bg_rb_education_pic</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Dialog" parent="android:style/Theme.Dialog">
        <item name="android:background">#00000000</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>
    <style name="mypopwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/popshow_anim</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/pophidden_anim</item>
    </style>

    <style name="time_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
</resources>
